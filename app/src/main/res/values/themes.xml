<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.RestauYou" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/accent</item>
    </style>

    <style name="Theme.RestauYou" parent="Base.Theme.RestauYou" />

    <!-- FIXED TIME BUTTON STYLE -->
    <style name="timeButton" parent="@android:style/Widget.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_margin">6dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:background">@drawable/time_button_selector</item>
        <item name="android:textColor">#444444</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- For images -->
    <style name="RoundedCornersStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">15dp</item>
    </style>

    <style name="CircularStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>

    <style name="CircularStyleSmall">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

</resources>





