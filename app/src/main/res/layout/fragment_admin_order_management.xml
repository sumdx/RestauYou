<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CustomerFragment.CustomerHomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/white"
        android:elevation="4dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order Management"
                    android:textSize="25sp"
                    android:layout_marginBottom="5dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/pendingText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:padding="10dp"
                        android:drawablePadding="8dp"
                        android:gravity="center"
                        android:text="0 Pending"
                        android:textColor="#785400"
                        android:background="@drawable/rounded_box"
                        android:backgroundTint="#FFF4CC"
                        app:drawableStartCompat="@drawable/outline_clock_loader_40_24" />

                    <TextView
                        android:id="@+id/preparingText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:padding="10dp"
                        android:drawablePadding="8dp"
                        android:gravity="center"
                        android:text="0 Preparing"
                        android:textColor="#001689"
                        android:background="@drawable/rounded_box"
                        android:backgroundTint="#CCEDFF"
                        app:drawableStartCompat="@drawable/outline_box_24" />

                    <TextView
                        android:id="@+id/readyText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:padding="10dp"
                        android:drawablePadding="8dp"
                        android:gravity="center"
                        android:text="0 Ready"
                        android:textColor="#246F00"
                        android:background="@drawable/rounded_box"
                        android:backgroundTint="#DFFFCC"
                        app:drawableStartCompat="@drawable/baseline_check_circle_outline_24" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/orderRV"
        android:padding="10dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <Button
        android:id="@+id/testNotiBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Test Notification" />
</LinearLayout>