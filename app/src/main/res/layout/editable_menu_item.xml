<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_margin="5dp"
    android:background="@drawable/transparent_bordered_rounded_bg"
    android:backgroundTint="@color/white"
    android:padding="5dp">
    
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/itemImage"
        android:layout_gravity="center"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/RoundedCornersStyle"
        android:src="@drawable/burger_img" />

    <LinearLayout
        android:layout_width="0dp"

        android:layout_marginStart="10dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/itemTitle"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="Margherita Pizza"/>
            <TextView
                android:background="@drawable/sm_rounded_bg_transparent"
                android:backgroundTint="@color/black"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:padding="3dp"
                android:textStyle="bold"
                android:id="@+id/itemAvailability"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:text="Available"/>
            <TextView

                android:background="@drawable/sm_rounded_bg_transparent"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:padding="3dp"
                android:backgroundTint="@color/ash"
                android:id="@+id/itemPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="$12.99"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/itemDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Menu items description but not more than 2 lines"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"
                app:icon="@drawable/edit_document_24px"
                app:iconTint="@android:color/background_dark"
                android:textColor="@color/black"
                android:backgroundTint="@color/white"
                app:strokeColor="@color/gray"
                app:strokeWidth="2dp"
                app:cornerRadius="10dp"
                android:layout_marginEnd="20dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete"
                app:icon="@drawable/edit_document_24px"
                app:iconTint="@android:color/holo_red_light"
                android:textColor="@color/red"
                android:backgroundTint="@color/white"
                app:strokeColor="@color/gray"
                app:strokeWidth="2dp"
                app:cornerRadius="10dp"
                android:layout_marginEnd="5dp" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>