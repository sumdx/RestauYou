<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/order1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_box"
    android:padding="16dp"
    android:layout_marginBottom="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/OrderNumberText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Order #949185"
                android:textColor="#333333"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/OrderStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="Order Received"
                android:textColor="#785400"
                android:background="@drawable/rounded_box"
                android:backgroundTint="#FAF1A7"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/OrderPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="$42.87"
                android:textColor="#FF6B00"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/OrderDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Nov 25, 2025, 12:19 PM"
            android:textColor="@color/gray"
            android:textSize="12sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#E0E0E0" />

        <!-- Icons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="14dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="14dp">

            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_marginEnd="40dp"
                android:layout_height="wrap_content">

                <com.google.android.material.imageview.ShapeableImageView
                    app:shapeAppearanceOverlay="@style/CircularStyleSmall"
                    android:id="@+id/imgReceived"
                    android:padding="5dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@color/accent"
                    android:src="@drawable/outline_clock_loader_40_24_green" />

                <TextView
                    android:id="@+id/textReceived"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Received"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_marginEnd="40dp"
                android:layout_height="wrap_content">

                <com.google.android.material.imageview.ShapeableImageView
                    app:shapeAppearanceOverlay="@style/CircularStyleSmall"
                    android:background="@color/light_gray"
                    android:padding="5dp"
                    android:id="@+id/imgCooking"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:tint="@color/black"
                    android:src="@drawable/cook" />

                <TextView
                    android:id="@+id/textCooking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cooking"
                    android:textColor="@color/gray"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_marginEnd="40dp"
                android:layout_height="wrap_content">

                <com.google.android.material.imageview.ShapeableImageView
                    app:shapeAppearanceOverlay="@style/CircularStyleSmall"
                    android:background="@color/light_gray"
                    android:id="@+id/imgReady"
                    android:padding="5dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:tint="@color/green"
                    android:src="@drawable/outline_check_circle_24" />

                <TextView
                    android:id="@+id/textReady"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ready"
                    android:textColor="@color/gray"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.imageview.ShapeableImageView
                    app:shapeAppearanceOverlay="@style/CircularStyleSmall"
                    android:background="@color/light_gray"
                    android:padding="5dp"
                    android:id="@+id/imgDone"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:tint="@color/black"
                    android:src="@drawable/done" />

                <TextView
                    android:id="@+id/textDone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Done"
                    android:textColor="@color/gray"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="20dp"
            android:background="#E0E0E0" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/customerOrderNestedRV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="#E0E0E0" />

        <!-- Estimated time -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/Date"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_time"
                />

            <TextView
                android:id="@+id/EstimatedTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="Estimated time: 20â€“30 minutes"
                android:textColor="#777"
                android:textSize="12sp" />
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/removeOrderBtn"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Remove Order"
            android:textColor="@color/white"
            android:backgroundTint="@color/accent"
            app:cornerRadius="10dp" />
    </LinearLayout>
</LinearLayout>